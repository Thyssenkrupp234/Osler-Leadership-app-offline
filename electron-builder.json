{
    "appId": "com.lincolnmuller.osleadship",
    "productName": "Osler Leadership app",
    "copyright": "Lincoln Muller",
    "directories": {
        "output": "out",
        "buildResources": "build-res"
    },
    "dmg": {
        "window": {
            "width": "700",
            "height": "700"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "pkg": {
        "allowCurrentUserHome": "true",
        "allowAnywhere": "true",
        "welcome": "/pkg-config/welcome.rtf",
        "conclusion": "/pkg-config/summary.rtf"
    },
    "mac": {
        "target": [
            "dmg",
            "pkg"
        ]
      },
      "win": {
          "target": {
              "target": "nsis",
              "arch": [
                  "ia32",
                  "x64"
              ]
              
          }
      },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    }
}